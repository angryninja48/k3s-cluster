---
originRequest:
  http2Origin: true

ingress:
  - hostname: "${SECRET_CLUSTER_DOMAIN}"
    service: https://nginx-external-controller.networking.svc.cluster.local:443
    originRequest:
      originServerName: "external.${SECRET_CLUSTER_DOMAIN}"
  - hostname: "*.${SECRET_CLUSTER_DOMAIN}"
    service: https://nginx-external-controller.networking.svc.cluster.local:443
    originRequest:
      originServerName: "external.${SECRET_CLUSTER_DOMAIN}"
  - service: http_status:404
